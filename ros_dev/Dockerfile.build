# Dockerfile.build
FROM osrf/ros:humble-desktop AS builder

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      python3-colcon-common-extensions \
      ros-humble-navigation2 \
      ros-humble-nav2-core \
      ros-humble-nav2-costmap-2d \
      ros-humble-tf2-ros \
      ros-humble-pluginlib \
    && rm -rf /var/lib/apt/lists/*

RUN apt-get update && apt-get install -y \
    python3-ament-package \
 && rm -rf /var/lib/apt/lists/*

# 1) Copy *your entire* workspace (not just src/) so colcon sees package.xml, CMakeLists, etc.
WORKDIR /workspace
COPY . /workspace

# Dockerfile.build (relevant snippet)
SHELL ["/bin/bash", "-lc"]

# Source ROS 2, then build with merged install layout
RUN source /opt/ros/humble/setup.bash && \
    colcon build \
      --merge-install \
      --install-base /opt/ros/humble_plugin_ws

# Final image: only package the install base
FROM scratch AS installer
COPY --from=builder /opt/ros/humble_plugin_ws /opt/ros/humble_plugin_ws